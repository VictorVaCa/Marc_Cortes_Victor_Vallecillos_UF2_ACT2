<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <!-- Contenedor de las teclas -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Teclas blancas -->
        <LinearLayout
            android:id="@+id/white_keys"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="bottom">

            <ImageButton
                android:id="@+id/c2"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:background="@drawable/key_white"
                android:contentDescription="Do 2"/>

            <ImageButton
                android:id="@+id/d2"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:background="@drawable/key_white"
                android:contentDescription="Re 2"/>

            <ImageButton
                android:id="@+id/e2"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:background="@drawable/key_white"
                android:contentDescription="Mi 2"/>

            <ImageButton
                android:id="@+id/f2"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:background="@drawable/key_white"
                android:contentDescription="Fa 2"/>

            <ImageButton
                android:id="@+id/g2"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:background="@drawable/key_white"
                android:contentDescription="Sol 2"/>

            <ImageButton
                android:id="@+id/a2"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:background="@drawable/key_white"
                android:contentDescription="La 2"/>

            <ImageButton
                android:id="@+id/b2"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:background="@drawable/key_white"
                android:contentDescription="Si 2"/>
        </LinearLayout>

        <!-- Teclas negras (Superpuestas en FrameLayout) -->
        <LinearLayout
            android:id="@+id/black_keys"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="top">

            <ImageButton
                android:id="@+id/cs2"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:background="@drawable/key_black"
                android:contentDescription="Do# 2"
                android:layout_marginStart="25dp"/>

            <ImageButton
                android:id="@+id/ds2"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:background="@drawable/key_black"
                android:contentDescription="Re# 2"
                android:layout_marginStart="20dp"/>

            <View
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"/>

            <ImageButton
                android:id="@+id/fs2"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:background="@drawable/key_black"
                android:contentDescription="Fa# 2"
                android:layout_marginStart="25dp"/>

            <ImageButton
                android:id="@+id/gs2"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:background="@drawable/key_black"
                android:contentDescription="Sol# 2"
                android:layout_marginStart="20dp"/>

            <ImageButton
                android:id="@+id/as2"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:background="@drawable/key_black"
                android:contentDescription="La# 2"
                android:layout_marginStart="20dp"/>
        </LinearLayout>

    </FrameLayout>
</LinearLayout>
